@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-6">
        <form class="" asp-action="SimpleSearch">
            <fieldset>
                <legend class="text-primary">Simple search</legend>
                <div class="form-group">
                    <label for="min" class="control-label">Min Date</label>
                    <div class="">
                        <input type="date" name="min" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="max" class="control-label">Max Date</label>
                    <div class="">
                        <input type="date" name="max" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend class="text-primary">Grouping search</legend>
                <div class="form-group">
                    <label for="max" class="control-label">Min Date</label>
                    <div class="">
                        <input type="date" name="min" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="max" class="control-label">Max Date</label>
                    <div class="">
                        <input type="date" name="max" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
