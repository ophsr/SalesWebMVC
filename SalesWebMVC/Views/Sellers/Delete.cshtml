    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are your sure you want to delete this?</h3>

<div>
    <hr />
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.BirthDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.BaseSalary)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(Model => Model.Name)</td>
                <td>@Html.DisplayFor(Model => Model.Email)</td>
                <td>@Html.DisplayFor(Model => Model.BirthDate)</td>
