@model IEnumerable<SalesWebMVC.Models.Seller>
@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover table-bordered text-center">
    <thead>
        <tr class="bg-info">
            <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Name)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.Email)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.BaseSalary)
                </th>
                <th>
                    <a class="btn btn-secondary btn-sm" role="button" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning btn-sm" role="button" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" role="button" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>