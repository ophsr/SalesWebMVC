@model SalesWebMVC.Models.Seller
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-5">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name">Complete Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter email">
                </div>
                <div class="form-group">
                    <label asp-for="BirthDate">Birth Date</label>
                    <input asp-for="BirthDate" type="date" class="form-control" placeholder="Enter birth date">
                </div>
                <div class="form-group">
                    <label asp-for="BaseSalary">Base Salary</label>
                    <input asp-for="BaseSalary" class="form-control" placeholder="Enter base salary">
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>